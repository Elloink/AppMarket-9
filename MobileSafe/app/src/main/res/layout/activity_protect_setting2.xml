<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapleaf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="2、手机卡绑定"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="通过绑定SIM卡："
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="下次重启手机如果发现SIM卡变化\n就会发送报警短信："
        android:textColor="#000000"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#77000000"
        android:layout_marginTop="10dp"

        ></View>
    <com.mapleaf.ui.SettingItem android:id="@+id/bangdingSIM" android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        mapleaf:titlee="点击绑定SIM卡"
        mapleaf:content_on="SIM卡已经绑定"
        mapleaf:content_off="SIM未绑定"
        ></com.mapleaf.ui.SettingItem>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_lock_lock" />
        <Button
            style="@style/btnpre" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:onClick="next"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>
