<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="5dp"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_detail_listview_item"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_height="80dp"
        android:src="@mipmap/image_demo"/>
    <TextView
        android:id="@+id/tv_detail_listview_title"
        android:layout_toRightOf="@id/iv_detail_listview_item"
        android:text="wegweggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"
        android:textSize="18sp"
        android:textColor="#000"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tv_detail_listview_title"
        android:id="@+id/tv_detail_listview_date"
        android:text="2016-08-25"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_detail_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>