<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_taskmanage_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/netmanager" />

    <TextView
        android:id="@+id/item_taskmanage_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_taskmanage_icon"
        android:text="手机卫士"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_taskmanage_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_taskmanage_appname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#880033"
        android:layout_toRightOf="@id/item_taskmanage_icon"
        android:text="手机内存"
        android:textSize="20sp" />
    <CheckBox
        android:id="@+id/cb_taskmanage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginRight="20dp"/>
</RelativeLayout>
