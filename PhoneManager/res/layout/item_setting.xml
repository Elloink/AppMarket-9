<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_setting_update_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="提示更新"
    android:textSize="25sp"
    android:textColor="#000000"
    android:layout_margin="15dp"
    />
<TextView
    android:id="@+id/tv_setting_update_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="是否打开提示更新"
    android:layout_marginLeft="15dp"
    android:textSize="18sp"
    android:layout_below="@id/tv_setting_update_title"/>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@id/tv_setting_update_content"
    android:background="#77000000"
    android:layout_marginTop="10dp"
    ></View>
<CheckBox
    android:id="@+id/cb_setting_update_checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    android:focusable="false"
    android:clickable="false"/>
</RelativeLayout>