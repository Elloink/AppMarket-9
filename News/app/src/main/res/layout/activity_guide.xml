<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mapleaf.news.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <Button
        android:visibility="invisible"
        android:id="@+id/btn_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始体验"
        android:textColor="@drawable/selector_btn_guide_text"
        android:background="@drawable/selector_btn_guide_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_guide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <ImageView
            android:id="@+id/view_redPoiont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_red"
            />
    </RelativeLayout>
</RelativeLayout>
